---
// Header.astro
const ul = [
  { name: 'Sobre mi', href: '#about' },
  { name: 'Portafolio', href: '#portafolio' },
  { name: 'Contacto', href: '#contacto' },
]
---
<header id="top" class="w-full bg-gray-900">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
    <div class="flex h-16 items-center justify-between text-center xs:text-left">
      <div class="flex-1 md:flex md:items-center md:gap-12">
        <a class="block text-teal-600 dark:text-teal-300 font-josefin font-extrabold italic text-xl" href="#">1nfinit0</a>
      </div>

      <nav aria-label="Global" class="hidden xs:block md:flex md:items-center md:gap-12">
        <ul class="flex items-center gap-6 text-sm">
          {ul.map(({ name, href }) => (
            <li>
              <a class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75" href={href}>{name}</a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>